
@using GymManager.Web.Pages.Shared.Components.AppMenu

<!doctype html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.88.1">
    <title>@ViewBag.Title</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/sticky-footer-navbar/">



    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Favicons -->
    <meta name="theme-color" content="#7952b3">


    <style>

        body {
            font-family: "Franklin Gothic", sans-serif;
            color: #8dbfd8;
            font-weight: bold;
        }


        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @@media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }

        main > .container {
            padding: 80px 15px 0;
           
        }

        .navbar_custom {
            background-color: #8dbfd8;
        }

        #image_padding {
            padding: 10px 10px 0;
        }

        .font-navbar {
            font-family: "Franklin Gothic", sans-serif;
            color: #FFC0CB;
            font-weight: bold;
            font-size: 18px;
        }

        #main-title {
            font-size: 30px;
            text-decoration: none;
        }

            #main-title:hover {
                color: white;
            }

        .carousel-margin-top {
            margin-top: 30px;
        }

        .carousel-item img {
            max-width: 100%;
            max-height: 900px;
            max-width: 800px;
            margin: 0 auto;
        }
    </style>

    @RenderSection("Head",false)
    
</head>
<body class="d-flex flex-column h-100">

    <header>
        <!-- Fixed navbar -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top navbar_custom">
            <div class="container-fluid ">
                <!--Link Imagen https://www.freepik.com/free-vector/flat-design-fitness-logo-template_4985595.htm#query=logotipo%20gym&position=4&from_view=search&track=ais-->
                <img src="~/Images/image-gym.jpg" alt="gym logo image" width="70" height="60" id="image_padding" />
                <a class=" font-navbar " id="main-title" href="#">Fitness Gym</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">

                    @await Component.InvokeAsync(typeof(AppMenuViewComponent), new { currentPageName = ViewBag.CurrentPageName })
                    @await Html.PartialAsync("~/Pages/Shared/Components/_EngineerName.cshtml")
                    @RenderSection("HeaderRight", false)

                </div>
            </div>
        </nav>
    </header>

    <!-- Begin page content -->
    <main class="flex-shrink-0">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">Place sticky footer content here.</span>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>
