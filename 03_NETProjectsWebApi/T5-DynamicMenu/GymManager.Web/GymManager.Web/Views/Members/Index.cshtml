@model GymManager.Web.Models.MemberListViewModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";

}

@section HeaderRight{

    <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>

}

<div class="container">
    <h1 class="mt-5">FITNESS GYM</h1>
    <div class="row">
        <div class="col-6">
            <p>New Members of the week: @Model.NewMembersCount</p>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-outline-success float-end">Add Member</a>
        </div>
    </div>
    
    @await Html.PartialAsync("~/Pages/Shared/_MemberList.cshtml",Model.Members)
    <!-- Acordeon 1-->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                WELCOME TO OUR BIG FAMILY FITNESS
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                At our gym, we are dedicated to helping you achieve your fitness goals.
                Our fitness family is here to support you every step of the way.
                Welcome to a place where your health and well-being are our priority.
            </div>
        </div>
    </div>
    <!-- Acordeon 2-->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                ABOUT US
            </button>
        </h2>
        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                With over 10 years of experience in the fitness industry, our team of
                certified trainers is dedicated to providing you with the best training experience.
                Meet our passionate team who are here to help you achieve your goals.
            </div>
        </div>
    </div>

    <!-- Acordeon 3-->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingThree">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                FACILITIES
            </button>
        </h2>
        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                Our modern facilities include a wide range of state-of-the-art training equipment.
                Additionally, we offer specialized training areas for activities such as yoga and Pilates.
                We also have fully equipped changing rooms and comfortable showers for your convenience.
            </div>
        </div>
    </div>
    <!-- Acordeon 4-->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingFour">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                PROGRAMS AND CLASSES
            </button>
        </h2>
        <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                Explore our range of fitness classes, from cardio training to strength and flexibility classes.
                We also offer personalized programs designed to help you achieve your specific fitness goals.
                Whether you're a beginner or an experienced athlete, we have something for everyone.
            </div>
        </div>
    </div>
    <!-- Acordeon 5-->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingFive">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                RATES AND MEMBERSHIPS
            </button>
        </h2>
        <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                We offer various membership options to suit your needs and budget.
                From monthly memberships to annual packages, we have flexible options for everyone.
                Also, check out our new member specials and family membership discounts.
            </div>
        </div>
    </div>
    <!-- Acordeon 6-->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingSix">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSix" aria-expanded="false" aria-controls="collapseSix">
                SCHEDULES
            </button>
        </h2>
        <div id="collapseSix" class="accordion-collapse collapse" aria-labelledby="headingSix" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <!--  Tabla de Horarios -->
                <div class="container">
                    <h2 class="mt-5">Class Schedules</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Day</th>
                                <th scope="col">Time</th>
                                <th scope="col">Class</th>
                            </tr>

                        </thead>
                        <tbody>
                            <tr>
                                <td>Monday</td>
                                <td>9:00 AM - 10:00 AM</td>
                                <td>Cardiovascular Training</td>
                            </tr>
                            <tr>
                                <td>Tuesday</td>
                                <td>5:30 PM - 6:30 PM</td>
                                <td>Yoga Class</td>
                            </tr>
                            <tr>
                                <td>Wednesday</td>
                                <td>10:30 AM - 11:30 AM</td>
                                <td>Pilates</td>
                            </tr>
                            <tr>
                                <td>Thursday</td>
                                <td>6:00 PM - 7:00 PM</td>
                                <td>Strength Training</td>
                            </tr>
                            <tr>
                                <td>Friday</td>
                                <td>7:30 AM - 8:30 AM</td>
                                <td>Spinning</td>
                            </tr>
                            <tr>
                                <td>Saturday</td>
                                <td>11:00 AM - 12:00 PM</td>
                                <td>Zumba</td>
                            </tr>
                            <tr>
                                <td>Sunday</td>
                                <td>10:00 AM - 11:00 AM</td>
                                <td>Functional Training</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</div>


            <!-- Carrousel-->
            <div id="carouselExample" class="carousel slide carousel-margin-top" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Images/gym1.jpg" class="d-block w-100" alt="Imagen 1">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/gym2.jpg" class="d-block w-100" alt="Imagen 2">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/gym3.jpg" class="d-block w-100" alt="Imagen 3">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
   
